<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".update.editlastname.EditLastNameFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frag_editfirstname_toolbar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">
            <ImageView
                android:id="@+id/frag_editfirstname_imgBack"
                android:layout_margin="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:text="Họ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/frag_editfirstname_edtFirstName"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/frag_editfirstname_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.dx.dxloadingbutton.lib.LoadingButton
        android:id="@+id/frag_editfirstname_btnCommit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_editfirstname_edtFirstName"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorOrange"
        android:text="Cập nhật tên"
        android:textAllCaps="false"
        app:lb_btnColor="@color/colorOrange"
        app:lb_btnText="Cật Nhập"
        app:lb_cornerRadius="10" />

</RelativeLayout>
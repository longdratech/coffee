<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

    <ImageView
        android:src="@drawable/img_bg_tch"
        android:id="@+id/thumbnail_for_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        card_view:layout_constraintBottom_toTopOf="@+id/title_bold_news"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:text="asdasdasdasdasdasd"
            android:id="@+id/title_bold_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnail_for_news"
            android:gravity="top"
            android:padding="6dp"
            android:textSize="14dp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toTopOf="@+id/title_for_news"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/thumbnail_for_news" />

        <TextView
            android:text="asdasdasdasd"
            android:id="@+id/title_for_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnail_for_news"
            android:gravity="top"
            android:paddingBottom="6dp"
            android:paddingRight="6dp"
            android:layout_marginLeft="6dp"
            android:textSize="12dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/title_bold_news" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
